<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/skip"
        android:textColor="#e6303030"
        android:textSize="12sp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="跳过"
        android:background="@drawable/news_channel_interest_skip_bg"
        android:gravity="center"
        android:layout_width="51dp"
        android:layout_height="27dp"/>

    <TextView
        android:id="@+id/big_title"
        android:text="定制我的个性内容"
        android:textSize="26sp"
        android:textColor="#303030"
        android:gravity="center"
        android:layout_marginTop="61dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_below="@+id/big_title"
        android:text="选择感兴趣频道, 呈现更多资讯"
        android:textSize="17sp"
        android:textColor="#303030"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.bloodsoul.normalflowingview.flowview.ContainerView
        android:id="@+id/floatingView"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="145dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    
    <TextView
        android:id="@+id/choosed"
        android:background="@drawable/news_channel_interest_choosed_bg"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#a5a5a5"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="选好了"
        android:layout_width="190dp"
        android:layout_height="42dp"/>

</RelativeLayout>

